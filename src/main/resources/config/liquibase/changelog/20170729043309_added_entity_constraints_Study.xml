<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Study.
    -->
    <changeSet id="20170729043309-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="email_id"
                                 baseTableName="study"
                                 constraintName="fk_study_email_id"
                                 referencedColumnNames="id"
                                 referencedTableName="email"/>

        <addForeignKeyConstraint baseColumnNames="studies_id"
                                 baseTableName="study_participant"
                                 constraintName="fk_study_participant_studies_id"
                                 referencedColumnNames="id"
                                 referencedTableName="study"/>
        <addForeignKeyConstraint baseColumnNames="participants_id"
                                 baseTableName="study_participant"
                                 constraintName="fk_study_participant_participants_id"
                                 referencedColumnNames="id"
                                 referencedTableName="participant"/>
        
        <addForeignKeyConstraint baseColumnNames="researcher_id"
                                 baseTableName="study"
                                 constraintName="fk_study_researcher_id"
                                 referencedColumnNames="id"
                                 referencedTableName="researcher"/>

    </changeSet>
</databaseChangeLog>
